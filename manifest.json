{
  "manifest_version": 2,
  "name": "Bard & ChatGPT address bar querying",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://cgpt/*",
    "http://bard/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://bard.google.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}

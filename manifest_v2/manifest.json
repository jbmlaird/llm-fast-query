{
  "manifest_version": 2,
  "name": "LLMFastQuery",
  "version": "0.0.0.1",
  "description": "Search Bard & ChatGPT directly from your address bar with cgpt/ and bard/ ðŸš€",
  "icons": {
    "48": "48.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://cgpt/*",
    "http://bard/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://bard.google.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
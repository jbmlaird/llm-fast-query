{
  "manifest_version": 3,
  "name": "LLMFastQuery",
  "version": "0.0.0.2",
  "description": "Search Bard & ChatGPT directly from your address bar with cgpt/ and bard/ ðŸš€",
  "icons": {
    "48": "48.png"
  },
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "declarative_net_request" : {
    "rule_resources" : [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "host_permissions": [
    "http://cgpt/*",
    "http://bard/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://bard.google.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ]
}
